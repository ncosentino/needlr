<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>Source-generation-based implementations for Needlr dependency injection. Use this package for AOT/trimming-compatible scenarios.</Description>
    <!-- Enable AOT/trim analyzers to catch issues at build time, not publish time -->
    <EnableTrimAnalyzer>true</EnableTrimAnalyzer>
    <EnableAotAnalyzer>true</EnableAotAnalyzer>
    <IsAotCompatible>true</IsAotCompatible>
    <IsTrimmable>true</IsTrimmable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\NexusLabs.Needlr.Injection\NexusLabs.Needlr.Injection.csproj" />
    <ProjectReference Include="..\NexusLabs.Needlr.Generators.Attributes\NexusLabs.Needlr.Generators.Attributes.csproj" />
  </ItemGroup>

</Project>
