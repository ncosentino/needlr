<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <!-- Default breadcrumb level if not specified by consumer -->
    <NeedlrBreadcrumbLevel Condition="'$(NeedlrBreadcrumbLevel)' == ''">Minimal</NeedlrBreadcrumbLevel>
    
    <!-- Enable diagnostic file generation (true/false). Default: false -->
    <NeedlrDiagnostics Condition="'$(NeedlrDiagnostics)' == ''">false</NeedlrDiagnostics>
    
    <!-- Directory for diagnostic output files. Default set in .targets where OutputPath is resolved -->
    <NeedlrDiagnosticsPath Condition="'$(NeedlrDiagnosticsPath)' == ''"></NeedlrDiagnosticsPath>
    
    <!-- Filter diagnostics to specific types (comma-separated fully qualified names). Default: empty (all types) -->
    <NeedlrDiagnosticsFilter Condition="'$(NeedlrDiagnosticsFilter)' == ''"></NeedlrDiagnosticsFilter>
    
    <!-- Enable IDE graph export (true/false). Default: false. Generates NeedlrGraph.g.cs for IDE tooling. -->
    <NeedlrExportGraph Condition="'$(NeedlrExportGraph)' == ''">false</NeedlrExportGraph>
  </PropertyGroup>

  <!-- Expose MSBuild properties to source generators via CompilerVisibleProperty -->
  <ItemGroup>
    <CompilerVisibleProperty Include="NeedlrBreadcrumbLevel" />
    <CompilerVisibleProperty Include="NeedlrDiagnostics" />
    <CompilerVisibleProperty Include="NeedlrDiagnosticsPath" />
    <CompilerVisibleProperty Include="NeedlrDiagnosticsFilter" />
    <CompilerVisibleProperty Include="NeedlrExportGraph" />
    <CompilerVisibleProperty Include="ProjectDir" />
  </ItemGroup>
</Project>
