<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    
    <!-- Emit generated files for inspection -->
    <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
    <CompilerGeneratedFilesOutputPath>obj\Generated</CompilerGeneratedFilesOutputPath>
    
    <!-- Enable Needlr diagnostics (outputs to bin/Debug/net10.0/NeedlrDiagnostics by default) -->
    <NeedlrDiagnostics>true</NeedlrDiagnostics>
  </PropertyGroup>

  <!-- Import Needlr targets for diagnostic file extraction -->
  <Import Project="..\..\..\NexusLabs.Needlr.Generators\build\NexusLabs.Needlr.Generators.targets" />

  <ItemGroup>
    <ProjectReference Include="..\..\..\NexusLabs.Needlr.AspNet\NexusLabs.Needlr.AspNet.csproj" />
    <ProjectReference Include="..\..\..\NexusLabs.Needlr.Injection.SourceGen\NexusLabs.Needlr.Injection.SourceGen.csproj" />
    <ProjectReference Include="..\..\..\NexusLabs.Needlr.FluentValidation\NexusLabs.Needlr.FluentValidation.csproj" />
    <ProjectReference Include="..\..\..\NexusLabs.Needlr.Generators\NexusLabs.Needlr.Generators.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
    <ProjectReference Include="..\..\..\NexusLabs.Needlr.Generators.Attributes\NexusLabs.Needlr.Generators.Attributes.csproj" />
    <ProjectReference Include="..\..\..\NexusLabs.Needlr.FluentValidation.Generators\NexusLabs.Needlr.FluentValidation.Generators.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
  </ItemGroup>

</Project>
