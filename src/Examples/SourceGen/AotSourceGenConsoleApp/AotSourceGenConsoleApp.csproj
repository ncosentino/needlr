<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<TargetFramework>net10.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>

		<!-- NativeAOT host -->
		<PublishAot>true</PublishAot>
		<IsAotCompatible>true</IsAotCompatible>

		<!-- Trimming: host is the proving ground -->
		<PublishTrimmed>true</PublishTrimmed>
		<TrimMode>full</TrimMode>

		<!-- Make reflection usage fail loudly -->
		<IlcDisableReflection>true</IlcDisableReflection>

		<!-- Optional: smaller/faster (tradeoffs) -->
		<InvariantGlobalization>true</InvariantGlobalization>
		<IlcGenerateStackTraceData>false</IlcGenerateStackTraceData>

		<!-- Analyze + enforce -->
		<EnableTrimAnalyzer>true</EnableTrimAnalyzer>
		<EnableAotAnalyzer>true</EnableAotAnalyzer>
		<TrimmerSingleWarn>false</TrimmerSingleWarn>
		<SuppressTrimAnalysisWarnings>false</SuppressTrimAnalysisWarnings>
		<WarningsAsErrors>$(WarningsAsErrors);IL2026;IL2060;IL2072;IL2075;IL2091</WarningsAsErrors>

		<!-- Emit generated files for debugging -->
		<EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
		<CompilerGeneratedFilesOutputPath>obj\Generated</CompilerGeneratedFilesOutputPath>

		<!-- Enable Needlr diagnostics - generates DependencyGraph.md, LifetimeSummary.md, RegistrationIndex.md -->
		<NeedlrDiagnostics>true</NeedlrDiagnostics>
		<NeedlrBreadcrumbLevel>Verbose</NeedlrBreadcrumbLevel>
		<NeedlrExportGraph>true</NeedlrExportGraph>
	</PropertyGroup>

	<!-- Import Needlr targets for diagnostic file extraction (auto-imported when using NuGet package) -->
	<Import Project="..\..\..\NexusLabs.Needlr.Generators\build\NexusLabs.Needlr.Generators.targets" />

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.Configuration" />
		<PackageReference Include="Microsoft.Extensions.Configuration.Json" />
		<PackageReference Include="Microsoft.Extensions.Options" />
	</ItemGroup>

	<ItemGroup>
		<None Update="appsettings.json">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\..\..\NexusLabs.Needlr.Injection.SourceGen\NexusLabs.Needlr.Injection.SourceGen.csproj" />
		<ProjectReference Include="..\..\..\NexusLabs.Needlr.Generators\NexusLabs.Needlr.Generators.csproj"
		  OutputItemType="Analyzer"
		  ReferenceOutputAssembly="false" />
		<ProjectReference Include="..\..\..\NexusLabs.Needlr.Generators.Attributes\NexusLabs.Needlr.Generators.Attributes.csproj" />
		<ProjectReference Include="..\AotSourceGenConsolePlugin\AotSourceGenConsolePlugin.csproj" />
	</ItemGroup>
</Project>
