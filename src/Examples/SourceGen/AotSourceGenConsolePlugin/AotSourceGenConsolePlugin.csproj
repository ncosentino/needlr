<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFramework>net10.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<!-- Options binding requires reflection for configuration binding -->
		<!-- AOT compatibility is enabled for non-options features -->
		<IsAotCompatible>false</IsAotCompatible>

		<!-- Emit generated files for debugging -->
		<EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
		<CompilerGeneratedFilesOutputPath>obj\Generated</CompilerGeneratedFilesOutputPath>

		<!-- Enable Needlr diagnostics for visualization -->
		<NeedlrDiagnostics>true</NeedlrDiagnostics>
		<NeedlrBreadcrumbLevel>Verbose</NeedlrBreadcrumbLevel>
	</PropertyGroup>

	<!-- Import Needlr targets for diagnostic file extraction -->
	<Import Project="..\..\..\NexusLabs.Needlr.Generators\build\NexusLabs.Needlr.Generators.targets" />

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.Options.ConfigurationExtensions" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\..\..\NexusLabs.Needlr\NexusLabs.Needlr.csproj" />
		<ProjectReference Include="..\..\..\NexusLabs.Needlr.Generators\NexusLabs.Needlr.Generators.csproj"
		  OutputItemType="Analyzer"
		  ReferenceOutputAssembly="false" />
		<ProjectReference Include="..\..\..\NexusLabs.Needlr.Generators.Attributes\NexusLabs.Needlr.Generators.Attributes.csproj" />
	</ItemGroup>
</Project>
