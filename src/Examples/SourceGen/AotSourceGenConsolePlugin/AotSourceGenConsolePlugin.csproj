<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFramework>net10.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>

		<!-- AOT compatible -->
		<IsAotCompatible>true</IsAotCompatible>

		<!-- Emit generated files for debugging -->
		<EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
		<CompilerGeneratedFilesOutputPath>obj\Generated</CompilerGeneratedFilesOutputPath>

		<!-- Enable Needlr diagnostics for visualization -->
		<NeedlrDiagnostics>true</NeedlrDiagnostics>
		<NeedlrBreadcrumbLevel>Verbose</NeedlrBreadcrumbLevel>
		<NeedlrExportGraph>true</NeedlrExportGraph>
	</PropertyGroup>

	<!-- Import Needlr targets for diagnostic file extraction -->
	<Import Project="..\..\..\NexusLabs.Needlr.Generators\build\NexusLabs.Needlr.Generators.targets" />

	<ItemGroup>
		<!-- Microsoft.Extensions.Options is required for AOT-compatible options binding -->
		<PackageReference Include="Microsoft.Extensions.Options" />
		<!-- Microsoft.Extensions.Options.DataAnnotations is required for ValidateDataAnnotations() -->
		<PackageReference Include="Microsoft.Extensions.Options.DataAnnotations" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\..\..\NexusLabs.Needlr\NexusLabs.Needlr.csproj" />
		<ProjectReference Include="..\..\..\NexusLabs.Needlr.Generators\NexusLabs.Needlr.Generators.csproj"
		  OutputItemType="Analyzer"
		  ReferenceOutputAssembly="false" />
		<ProjectReference Include="..\..\..\NexusLabs.Needlr.Generators.Attributes\NexusLabs.Needlr.Generators.Attributes.csproj" />
	</ItemGroup>
</Project>
