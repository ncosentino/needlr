<Project Sdk="Microsoft.NET.Sdk">

  <ItemGroup>
    <PackageReference Include="Microsoft.SemanticKernel" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\NexusLabs.Needlr.AspNet\NexusLabs.Needlr.AspNet.csproj" />
    <ProjectReference Include="..\NexusLabs.Needlr\NexusLabs.Needlr.csproj" />
    <ProjectReference Include="..\NexusLabs.Needlr.Generators.Attributes\NexusLabs.Needlr.Generators.Attributes.csproj" />
    <!-- Main generator for TypeRegistry generation — NOT PrivateAssets so it flows as a transitive NuGet dependency -->
    <ProjectReference Include="..\NexusLabs.Needlr.Generators\NexusLabs.Needlr.Generators.csproj"
                      ReferenceOutputAssembly="false"
                      OutputItemType="Analyzer" />
  </ItemGroup>

  <!-- Include SemanticKernel generators in the NuGet package -->
  <ItemGroup>
    <ProjectReference Include="..\NexusLabs.Needlr.SemanticKernel.Generators\NexusLabs.Needlr.SemanticKernel.Generators.csproj"
                      PrivateAssets="all"
                      ReferenceOutputAssembly="false"
                      OutputItemType="Analyzer" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\NexusLabs.Needlr.SemanticKernel.Generators\bin\$(Configuration)\netstandard2.0\NexusLabs.Needlr.SemanticKernel.Generators.dll"
          Pack="true"
          PackagePath="analyzers/dotnet/cs"
          Visible="false" />
    <None Include="build\*.targets" Pack="true" PackagePath="build/" />
  </ItemGroup>

</Project>
